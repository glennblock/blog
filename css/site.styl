html
  overflow-x: hidden;

body
  min-width: 320px;

@media screen and (min-width: 990px)
  .header-dark header.site-header h1.navbar-brand a
    background-image: url("//cdn.auth0.com/styleguide/latest/lib/logos/img/logo-grey.png");

.container,
.banner
  color: color_grey_text;

  p, li
    color: color_grey_text;

h1, h2,h3,h4,h5, pre
  margin-top: 20px;
  margin-bottom: 20px;

h1
  margin-top: 0;

p,li
  color: #4d4d4d;

.bottom-module
  margin-top: 40px;

  +breakpoint("tablet")
    margin-top: 60px;

.zero-height
  height 0
  transition height 1s ease

.try-banner
  background: none;
  border: 1px solid rgba(0, 0, 0, 0.1);

  +breakpoint("desktop")
    padding-top 60px
    padding-bottom 40px
    border-left: 0;
    border-right: 0;
    border-radius: 0;

.try-code
  a.btn
    margin-top: 0;
    background: color_blue_light;
    i
      position: relative;
      top: 3px;
      margin-right: 10px;
    &:hover
      background: darken(color_blue_light, 30%);

.icon-circle
  border: 1px solid #cfcfcf;
  height: 44px;
  width: 44px;
  display: inline-block;
  border-radius: 50%;
  position: relative;
  text-align: center;

  i
    font-style: normal;
    position: absolute;
    top: 50%;
    left: 50%;
    -webkit-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);

.small-caps
  text-transform: uppercase;
  letter-spacing: 0.06em;
  font-weight: 500;

.line
  content: "";
  height: 1px;
  width: 100%;
  background: color_grey;
  display: block;
  opacity: 0.5;

.banner.banner-post
  background: #354171;
  padding: 20px 0;
  margin-bottom: 0;

  .banner-container
    -webkit-animation: none;
    animation: none;


  +breakpoint("desktop")
    padding-top: 162px;
    padding-bottom: 40px;

  &.banner-blog
    padding-bottom: 40px;
    background: #232228;
    position: relative;

    &:before
      content: "";
      display: block;
      position: absolute;
      bottom: -75px;
      left: 0;
      width: 100%;
      height: 100%;
      opacity: 0.03;
      background: url('https://cldup.com/7KB0QsZkIX.svg') top center no-repeat;

      +breakpoint("mobile-landscape")
        bottom: -30px;

      +breakpoint("desktop")
        bottom: -130px;

  .banner-subtitle
    @extend .small-caps;
    font-size: 14px;
    opacity: 0.7;
    margin 0

  .entry-content p
    color: white;
    font-size: 20px;
    margin-bottom: 40px;
    opacity: 0.7;

  .entry-title
    +breakpoint("desktop")
      font-size: 32px;

  a,
  a:hover
    color: white;

  .network,
  .date
    color: white;

.blog-series
  &.banner-post
    .entry-title:before
      color: white;

  .entry-title
    &:before
      content: "blog series";
      display: block;
      width: 100%;
      text-transform: uppercase;
      letter-spacing: 1px;
      font-size: 13px;
      padding: 10px;
      color: currentColor;
      opacity: 0.7;

.entry-title
  font-size: 24px;
  line-height: 1.3;
  text-align: center;
  font-weight: 500;

  +breakpoint("desktop")
    font-size: 28px;
    max-width: 600px;
    margin: 25px auto;

  a
    font-weight: 500;
    color: #333;

.blog-title
  @extend .entry-title;
  font-size: 32px;
  margin: 12px auto;
  margin-top: 10px;

p.blog-description
  color: white;
  opacity: 0.7;
  font-size: 20px;

.entry-thumbnail
  margin: 0 auto;
  margin-top: 30px;
  display: inline-block;
  border-radius: 50%;
  overflow: hidden;
  position: relative;
  background: #EAEEF3;
  height: 100px;
  width: 100px;
  opacity: 1 !important;

  +breakpoint("desktop")
    height: 126px;
    width: 126px;
  img
    position: absolute;
    top: 50%;
    left: 50%;
    -webkit-transform: translate(-50%, -50%);
    -ms-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
    max-width: 120%;

.custom-try-banner
  background #222228 url("https://cdn.auth0.com/blog/banner/banner-pattern-2.svg") center center no-repeat

  .banner-wrapper
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center
    flex-direction: column;
    padding: 30px;

    +breakpoint("tablet")
      flex-direction: row;
      padding: 0 50px;

  .banner-text
    flex: 1;
    margin: 0px 22px;
    padding: 25px 0;
    margin-bottom: 0;
    font-size 13.5px
    font-weight 500
    text-align: center;
    color: #fff;

    +breakpoint("tablet")
      flex: 1 248px;

  .btn-md
    font-size: 11px;
// This css is used to export blog thumbnails using canvas,
// images need to be centered using table cell as canvas doesnt support
// the translate property.
.banner.banner-post.export
  position: absolute;
  width: 800px;

  .post-info
    display: none;

  .entry-thumbnail
    display: table;
    background: transparent;

    .holder
      display: table-cell;
      vertical-align: middle;

      img
        width: 101%;
        margin: -3px;
        position: static;
        top: auto;
        left: auto;
        -webkit-transform: none;
        -ms-transform: none;
        transform: none;

.banner.banner-post.export-icon
  .entry-thumbnail
    border-radius: 150px;
    width: 300px;
    height: 300px;

.blog-thumbnail
  @extend .entry-thumbnail;
  height: 100px;
  width: 100px;

  img
    top: 53%;
    max-width: 40%;

.post-info
  grid(1, 0, "> div")
  line-height: 30px;
  text-align: center;

  a
    font-weight: 500;
    color: currentColor;

    &:hover,
    &:focus,
    &:active
      color: currentColor;

  +breakpoint("desktop")
    grid(3, 0, "> div")
    font-size: 14px;
    max-width: 800px;
    margin: 0 auto;

    .author
      text-align: left;

    .social-stats
      text-align: right;

    .date
      text-align: center;

  time
    opacity: 0;

    &.rendered
      opacity: 0.7;


.network
  color: color_grey_text;
  text-decoration: none;

  & + .network
    margin-left: 10px;

  svg
    position: relative;
    top: 5px;

  &[data-type="facebook"] svg
    top: 2px;
    left: -2px;

  svg, path
    fill: currentColor;

.reply-networks
  margin-top: 40px;

  .icon-circle
    position: relative;
    top: 18px;
    border-color: lighten(color_grey_text, 80%);
    margin-right: 10px;

  .tw i
    position: absolute;
    top: 60%;
    left: 55%;
    font-size: 22px;
    color: #288ce4;

  .hn i
    color: color_red;
    font-weight: 500;

  a
    font-weight: normal;
    color: lighten(color_grey_text, 20%);

    & + a
      margin-left: 40px;

.navbar-fixed-top
  padding: inherit;

h1,h2,h3,h4,h5
  color: #333;

#container.container
  margin-top 50px

.tab
	@extend .small-caps;
	font-weight: normal;
	display: block;
	padding: 18px 5px;
  margin-bottom: -1px;
  font-size: 14px;

  +breakpoint("desktop")
    margin: 0 25px;

  i
  	position: relative;
  	top: 2px;
  	margin-right: 5px;

  & + li
  	border-top: 1px solid rgba(255, 255, 255, 0.1);

  	+breakpoint("desktop")
  		border-top: 0;

  +breakpoint("desktop")
  	display: inline-block;

  a
    color: white;

    &:hover,
    &:focus,
    &:active
    	opacity: 0.5;
    	text-decoration: none;

  &.active
    background: #27bff3;
    position: relative;
    z-index: 20;
    color: white;

    +breakpoint("desktop")
      border-bottom: 1px solid #27bff3;
      color: #27bff3;
    	background: none;

    a
    	color: #27bff3;
    	font-weight: 500;
    	text-decoration: none;

    	&:hover,
    	&:focus,
    	&:active
    		text-decoration: none;
    		opacity: 1;



// Sticky element / sticky-kit

.content-column
  margin-right -1px //Fix for percentage width library error

.content-column,
.sidebar-column
  +breakpoint("desktop")
    position static

.blog-navigation
  border-top: 1px solid rgba(255, 255, 255, 0.1);
  background-color: #232228;
  transform translate3d(0px,0px,0px)

  .jump-to
    outline: none;
    display: block;
    border: 0;
    width: 100%;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    color: white;
    font-weight: 500;
    z-index: 400;
    position: relative;
    background-color: #232228;
    @extend .tab;

    +breakpoint("desktop")
      display: none;

    i
      margin-left: 5px;
      opacity: 0.5;

  #navigation_menu
    background-color: #232228;

  ul, li, &
    list-style: none;
    padding: 0;
    margin: 0;

  &
    z-index: 200;
    position: relative;
    min-height: 65px;
    text-align: left;

  [data-sticky]
    &:after
      width: 100%;
      margin: 0;

    &.fixed
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      z-index: 1000;
      background-color: rgba(35, 34, 40, 0.87)

  .nav-list
  	+breakpoint("desktop")
  		height: auto !important;
  		display: block !important;

  ul > li
  	@extend .tab;
  	text-transform: none;
  	letter-spacing: normal;

ul.archive
  margin: 0;
  padding: 0;
  list-style: none;

.author
  .name
    opacity: 0.7;
  img
    border-radius: 50%;
    margin-right: 5px;
    position: relative;
    top: -2px;

.blog-single .entry-content strong
  font-weight: 700;

.entry-content
  font-size: 18px;
  line-height: 2;
  margin: 0 auto;
  font-family: "minion-pro", serif;

  +breakpoint("desktop")
    font-size: 20px;

  h1, h2, h3, h4, h5
    line-height: 1.5
    font-family: "Avenir Next", avenir-next-web, "Helvetica Neue", Hevetica, sans-serif;

  a
    color: color_grey_text;
    text-decoration: none;
    //background-image: linear-gradient(to bottom, rgba(0,0,0,0) 50%, rgba(0,0,0,0.6) 50%);
    background-repeat: repeat-x;
    background-size: 2px 2px;
    background-position: 0 23px;
    border-bottom: 1px solid rgba(0,0,0,0.50);

  code
    border-radius: 4px;
    font-size: 75%;
    padding: 3px 8px;
    color: color_grey_text;
    background: lighten(color_grey_text, 90%);

  ul
    margin: 40px 0;
    padding-left: 0;
    li
      list-style: none;
      position: relative;
      padding-left: 25px;

      &:before
        content: "";
        display: inline-block;
        height: 6px;
        width: 6px;
        background: color_red;
        position: absolute;
        top: 0.8em;
        border-radius: 3px;
        left: 0;
        margin-right: 20px;

  pre
    margin: 40px 0;
    word-wrap: normal;
    padding: 20px;
    overflow-x: scroll;

    code
      font-size: 13px;
      background: none;
      color: white;
      border: 0;
      padding: 0;
      white-space: pre;

  h2, h3
    font-weight: 500;
    margin: 30px 0;

  h2
    margin-top 30px
    margin-bottom 25px

    +breakpoint("desktop", "max")
      font-size 24px
      margin-bottom 15px

  h3
    margin-bottom 20px

    +breakpoint("desktop", "max")
      font-size 22px

  h4, h5, h6
    @extend .small-caps;
    font-size: 14px;

  blockquote
    font-size: 108%;
    border-left: 1px solid #eee;
    font-style: normal;

    .author
      font-size: 100%;

  hr
    margin: 40px auto;
    max-width: 30%;
    border-color: lighten(color_grey_text, 80%);

  img
    height: auto;
    max-width: 100%;
    margin: 40px 0;

  video
    max-width 100%

  iframe
    // Fix - Prevent youtube videos from going out of the container
    max-width 100% !important

pre.prettyprint
  padding: 20px !important;
  border: 0 !important;
  border-radius: 3px;

.entry-content twitterwidget
  margin: 40px auto !important;

#nav-below.navigation
  overflow: hidden;
  margin-bottom: 50px;
  text-align: center;

  .nav-previous,
  .nav-next
    display: inline-block
    a
      display: inline-block;
      background-color: rgba(0, 0, 0, .05);
      font-size: 13px
      color: black;
      line-height: 34px;
      padding: 0 12px
      border-radius: 3px;

      i[class^="icon-"]
        display inline-block
        vertical-align middle
        line-height 34px


  .nav-previous
    float left

    i[class^="icon-"]
      padding-right 12px
      margin-right 12px
      border-right 1px solid white

  .nav-next
    float right

    i[class^="icon-"]
      padding-left 12px
      margin-left 12px
      border-left 1px solid white

.related-posts
  grid(1, 20px, ".entry-related")
  margin-bottom: 80px;

  +breakpoint("desktop")
    grid(3, 20px, ".entry-related")

  .entry-related
    text-align: center;

    .entry-title
      font-size: 18px;

.entry-content .alert
  font-family: "proxima-nova";
  font-size: 14px;
  color: white;
  line-height: 1.5;
  margin-top: 20px;
  font-weight: 500;
  background: rgb(243, 53, 53);
  position: relative;
  padding-left: 62px;
  margin-bottom: 40px;

  i
    position: absolute;
    top: 20px;
    left: 15px;
    opacity: .7;
    font-size: 27px;

  a
    text-decoration: underline;
    color: currentColor;

.separator
  border-top: 1px solid #ddd;
  margin-bottom: 40px;

#auth0
  border: 1px  #ecf0f1 solid;
  padding: 10px;
  text-align: center
  border-radius: 3px;
  margin: 30px 0;
  overflow: hidden

#disqus_thread
  margin: 40px 0;

[data-close]
  width: 18px;
  height: 18px;
  opacity: .8;
  background-size: 100%;
  background-image: url("data:image/png;base64,");
  cursor: pointer;
  display: block;

.tweet-quote
  a
    background-image none

  .tweet-link
    text-decoration none
    font-weight 500
    font-size 14px
    font-family: "Avenir Next",avenir-next-web,"Helvetica Neue",Hevetica,sans-serif;
    color #55ACEE
    letter-spacing 0.6px
    &:hover
      color #333
    img
      margin -2px 0 0 5px

.pdf-bonus
